@page "/register"
@using Diplom.Shared
@inject NavigationManager Navigation
@inject HttpClient Http
@inject ToastService ToastService

<h3 class="text-center mb-4">Реєстрація</h3>

<div class="d-flex justify-content-center">
    <div class="card p-4 shadow-sm" style="width: 22rem;">
        <div class="mb-3">
            <input class="form-control" @bind="email" placeholder="Email" />
        </div>
        <div class="mb-3">
            <input type="password" class="form-control" @bind="password" placeholder="Пароль" />
        </div>
        <div class="mb-3">
            <input type="password" class="form-control" @bind="confirmPassword" placeholder="Повторіть пароль" />
        </div>
        <button class="btn btn-success w-100" @onclick="RegisterUser" disabled="@isLoading">
            @if (isLoading)
            {
                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            }
            else
            {
                <span>Зареєструватися</span>
            }
        </button>
        <div class="text-center mt-3">
            <a href="/login">Вже є акаунт? Увійти</a>
        </div>
    </div>
</div>

@code {
    private string email;
    private string password;
    private string confirmPassword;
    private bool isLoading = false;

    private async Task RegisterUser()
    {
        if (password != confirmPassword)
        {
            // TODO: Показати помилку про невідповідність паролів
            return;
        }

        isLoading = true;
        var response = await Http.PostAsJsonAsync("api/auth/register", new { Email = email, Password = password });
        isLoading = false;

        if (response.IsSuccessStatusCode)
        {
            ToastService.ShowSuccess("Успішна реєстрація!");
            Navigation.NavigateTo("/login");
        }
        else
        {
            ToastService.ShowError("Помилка реєстрації. Спробуйте ще раз.");
        }
    }
}