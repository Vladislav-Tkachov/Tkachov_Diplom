@page "/login"
@using Diplom.Shared
@inject NavigationManager Navigation
@inject HttpClient Http
@inject Client.Auth.CustomAuthStateProvider AuthProvider
@inject ToastService ToastService

<h3 class="text-center mb-4">Вхід</h3>

<div class="d-flex justify-content-center">
    <div class="card p-4 shadow-sm" style="width: 22rem;">
        <div class="mb-3">
            <input class="form-control" @bind="email" placeholder="Email" />
        </div>
        <div class="mb-3">
            <input type="password" class="form-control" @bind="password" placeholder="Пароль" />
        </div>
        <button class="btn btn-primary w-100" @onclick="LoginUser" disabled="@isLoading">
            @if (isLoading)
            {
                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            }
            else
            {
                <span>Увійти</span>
            }
        </button>
        <div class="text-center mt-3">
            <a href="/register">Ще немає акаунта? Реєстрація</a>
        </div>
    </div>
</div>

@code {
    private string email;
    private string password;
    private bool isLoading = false;

    private async Task LoginUser()
    {
        isLoading = true;
        var loginResult = await AuthProvider.Login(email, password);
        isLoading = false;

        if (loginResult)
        {
            ToastService.ShowSuccess("Успішний вхід!");
            Navigation.NavigateTo("/tickets");
        }
        else
        {
            ToastService.ShowError("Невірний логін або пароль.");
        }
    }
}