<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">MyApp</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <NavLink class="nav-link" href="/">Головна</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="/tickets">Тікети</NavLink>
                </li>
            </ul>

            <AuthorizeView>
                <Authorized>
                    <button class="btn btn-outline-light" @onclick="Logout">Вийти</button>
                </Authorized>
                <NotAuthorized>
                    <button class="btn btn-outline-light me-2" @onclick="@(() => Navigation.NavigateTo("/login"))">Вхід</button>
                    <button class="btn btn-success" @onclick="@(() => Navigation.NavigateTo("/register"))">Реєстрація</button>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </div>
</nav>

@code {
    [Inject] private NavigationManager Navigation { get; set; }
    [Inject] private Diplom.Client.CustomAuthStateProvider AuthProvider { get; set; }

    private async Task Logout()
    {
        await AuthProvider.MarkUserAsLoggedOut();
        Navigation.NavigateTo("/login");
    }
}